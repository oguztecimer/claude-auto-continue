  "homepage": "https://github.com/oguztecimer/claude-auto-continue#readme",
  "bugs": {
    "url": "https://github.com/oguztecimer/claude-auto-continue/issues"
  },
  "dependencies": {
    "node-pty": "^1.1.0",
    "strip-ansi": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
