{
  "name": "claude-auto-continue",
  "version": "1.0.13",
  "description": "Automatically resumes Claude Code sessions after usage limits reset",
  "main": "dist/index.js",
  "bin": {
    "claude-auto-continue": "bin/claude-auto-continue.js",
    "clac": "bin/claude-auto-continue.js"
  },
  "files": [
    "dist/",
